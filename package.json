{
  "name": "MDModern",
  "version": "0.2.0",
  "license": "GPL-3.0+",
  "author": {
    "name": "Philipp Miller",
    "url": "http://github.com/philer"
  },
  "scripts": {
    "build": "npm run build:js && npm run build:css",
    "dist": "npm run dist:js && npm run dist:css",
    "lint": "eslint --color='true' --format 'node_modules/eslint-friendly-formatter' js/** MDM/**",
    "build:js": "rollup -c",
    "prebuild:js": "npm run lint",
    "dist:js": "NODE_ENV=production npm run build:js",
    "build:css": "lessc --strict-math=on --source-map less/theme.less dist/MDModern.css",
    "dist:css": "npm run build:css -- --clean-css"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-eslint": "~6.0.0",
    "babel-polyfill": "^6.7.2",
    "babel-preset-es2015-rollup": "~1.1.1",
    "babel-preset-stage-2": "^6.5.0",
    "eslint": "~2.4.0",
    "eslint-friendly-formatter": "~1.2.2",
    "jquery": "~2.2.1",
    "less": "^2.6.1",
    "less-plugin-clean-css": "^1.5.1",
    "rollup": "~0.25.4",
    "rollup-plugin-babel": "~2.4.0",
    "rollup-plugin-json": "~2.0.0",
    "rollup-plugin-multi-entry": "^1.2.0",
    "rollup-plugin-uglify": "~0.3.1"
  },
  "eslintConfig": {
    "root": true,
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "block-scoped-var": "warn",
      "comma-dangle": [
        "warn",
        "always-multiline"
      ],
      "no-console": "off",
      "no-var": "warn",
      "semi": [
        "error",
        "always"
      ],
      "strict": "error"
    },
    "env": {
      "browser": true,
      "jquery": true
    },
    "globals": {
      "Promise": false
    }
  }
}
